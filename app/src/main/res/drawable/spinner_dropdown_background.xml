<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white"/> <!-- Dark blue background -->
            <stroke android:width="2dp" android:color="#0000FF"/> <!-- Border color -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/gong_blue_dark"/> <!-- Dark blue background -->
            <stroke android:width="2dp" android:color="@color/gong_blue_light"/> <!-- Border color -->
        </shape>
    </item>
</selector>